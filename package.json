{
  "name": "@suffle/jira-ticket-loader",
  "version": "2.2.0",
  "description": "A Node.js package that downloads JIRA ticket content and populates markdown templates with ticket data. Perfect for generating AI prompts, documentation, or automated ticket summaries.",
  "main": "src/index.js",
  "bin": {
    "jira-loader": "src/index.js"
  },
  "type": "module",
  "files": [
    "src/",
    ".jira-loaderrc.example.json",
    "README.md"
  ],
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "clean": "rm -rf output/*",
    "prepare": "npm run test",
    "prepublishOnly": "npm run test"
  },
  "keywords": [
    "jira",
    "markdown",
    "templates",
    "automation",
    "ai-prompts",
    "documentation",
    "cli",
    "ticket-loader"
  ],
  "author": "Sebastian Flor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suffle/jira-ticket-loader.git"
  },
  "bugs": {
    "url": "https://github.com/suffle/jira-ticket-loader/issues"
  },
  "homepage": "https://github.com/suffle/jira-ticket-loader#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "extended-markdown-adf-parser": "^2.3.2",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.9.6"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
